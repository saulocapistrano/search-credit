<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="005" author="saulocapistrano">
        <!-- Adicionar UNIQUE constraint em credito.numero_credito -->
        <addUniqueConstraint
                tableName="credito"
                columnNames="numero_credito"
                constraintName="uk_credito_numero_credito"/>

        <!-- Criar índice em credito.numero_nfse -->
        <createIndex
                indexName="idx_credito_numero_nfse"
                tableName="credito">
            <column name="numero_nfse"/>
        </createIndex>

        <!-- Criar índices em solicitacao_credito para otimizar consultas -->
        <createIndex
                indexName="idx_solicitacao_nome_solicitante"
                tableName="solicitacao_credito">
            <column name="nome_solicitante"/>
        </createIndex>

        <createIndex
                indexName="idx_solicitacao_numero_nfse"
                tableName="solicitacao_credito">
            <column name="numero_nfse"/>
        </createIndex>

        <createIndex
                indexName="idx_solicitacao_status"
                tableName="solicitacao_credito">
            <column name="status"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>

