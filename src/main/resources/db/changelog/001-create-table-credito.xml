<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="001" author="saulocapistrano">
        <createTable tableName="credito">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="numero_credito" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="numero_nfse" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="data_constituicao" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="valor_issqn" type="DECIMAL(15,2)">
                <constraints nullable="false"/>
            </column>
            <column name="tipo_credito" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="simples_nacional" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="aliquota" type="DECIMAL(5,2)">
                <constraints nullable="false"/>
            </column>
            <column name="valor_faturado" type="DECIMAL(15,2)">
                <constraints nullable="false"/>
            </column>
            <column name="valor_deducao" type="DECIMAL(15,2)">
                <constraints nullable="false"/>
            </column>
            <column name="base_calculo" type="DECIMAL(15,2)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
